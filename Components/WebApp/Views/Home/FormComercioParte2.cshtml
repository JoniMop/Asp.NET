@using WebApp.Helpers;
<script src="~/Scripts/Views/vHeader.js"></script>
<script src="~/Scripts/Views/vBitacora.js"></script>
<script src="~/Scripts/Views/vComercio.js"></script>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Form Comercio</title>
    <meta charset="utf-8">

    <!--CSS-->
    <link rel="stylesheet" href="~/Content/css/reset.css"> <!--reset style-->
    <link rel="stylesheet" href="~/Content/css/commons.css">
    <link rel="stylesheet" href="~/Content/css/formComercioParte2.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto Condensed' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<body>
    <div class="mainImage1">
        <a href="/Home/Index"><img id="logo" src="https://res.cloudinary.com/veromorera/image/upload/v1573498967/masterFood/logo.png"></a>


        <div class="formContainer">
            <div class="form">
                <h2 id="encabezadoForm">Registrar su Restaurante</h2>
                <h4>Paso 2</h4>

                <form id="frmRestaurante" class="frm">
                    <!--registrar restaurante-->
                    @Html.CtrlInput(id: "txtCedulaJu", type: "text", label: "Cédula Jurídica", columnDataName: "CedulaJuridica")
                    @Html.CtrlInput(id: "txtNombreRest", type: "text", label: "Nombre del Restaurante", columnDataName: "NombreComercial")
                    @Html.CtrlInput(id: "txtHorarioOpen", type: "time", label: "Horario de Inicio", columnDataName: "HorarioOpen")
                    @Html.CtrlInput(id: "txtHorarioClose", type: "time", label: "Horario de Cierre", columnDataName: "HorarioClose")
                    @Html.CtrlInput(id: "txtCategoriaTemp", type: "text", label: "Categoría", columnDataName: "Categoria")
                    @Html.CtrlInput(id: "txtIdUsuarioRest", type: "text", label: "", columnDataName: "IdEncargado")

                </form>
                <form id="dropdownCat">
                    @Html.DropDownList("Categoría", new SelectList(new List<Object>
                       {
                           new {value="Hamburguesas", text="Hamburguesas"},
                           new {value="Pizzas", text="Pizzas"},
                           new {value="Pollo", text="Pollo"},
                           new {value="Asiatica", text="Asiática"},
                           new {value="Nacional", text="Nacional"},
                           new {value="India", text="India"},
                           new {value="Saludable", text="Saludable"},
                           new {value="Reposteria", text="Repostería"},
                           new {value="Postres", text="Postres"},

                       }, "value", "text"), new { Id = "txtCategoria" })
                </form>
                @Html.CtrlButton(viewName: "vComercio", id: "btnRegistrar", label: "Registrar Restaurante", onClickFunction: "RegistrarRestaurante", buttonType: "success")

            </div>
            <h2 id="textDecoForm">
                ¡Incremente el
                <br>público de
                <br>su negocio!
            </h2>
        </div>

    </div>
    </div>

    <!---------------------------------------------------------------------------------------------------------------------->

    <footer id="footer">
        <img id="logoFooter" src="https://res.cloudinary.com/veromorera/image/upload/v1573498967/masterFood/logo.png">
        <img id="logoLemon" src="https://res.cloudinary.com/veromorera/image/upload/v1574303663/masterFood/logoPSW2-01.jpg">

        <p>
            MasterFood 2019 - Todos los derechos reservados.<br />
            Creado por <a id="footerLanding" href="/Home/lemonCode"> LemonCode</a>
        </p>
    </footer>


    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!-- Scripts cloudinary -->

    <script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js' type='text/javascript'></script>
    <script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    <script src="~/Scripts/Views/vImagen.js"></script>

</body>
</html>
