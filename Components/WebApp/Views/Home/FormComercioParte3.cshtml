@using WebApp.Helpers;
<script src="~/Scripts/Views/vHeader.js"></script>
<script src="~/Scripts/Views/vBitacora.js"></script>
<script src="~/Scripts/Views/vComercio.js"></script>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Form Comercio</title>
    <meta charset="utf-8">

    <!--CSS-->
    <link rel="stylesheet" href="~/Content/css/reset.css"> <!--reset style-->
    <link rel="stylesheet" href="~/Content/css/commons.css">
    <link rel="stylesheet" href="~/Content/css/formComercioParte3.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto Condensed' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<body>
    <div class="mainImage1">
        <a href="/Home/Index"><img id="logo" src="https://res.cloudinary.com/veromorera/image/upload/v1573498967/masterFood/logo.png"></a>


        <div class="formContainer">
            <div class="form">
                <h2 id="encabezadoForm">Registrar imágen de su restaurante</h2>
                <h4>Paso 3</h4>

                <form id="uploadImagesForm">
                    <div id="pic1_container">
                        <img id="image_preview" src="">
                    </div>
                    @Html.CtrlButton(viewName: "", id: "btnSubirFoto", label: "Subir Logo", buttonType: "danger")

                    <div id="pic2_container">
                        <img id="image_preview2" src="">
                    </div>
                    @Html.CtrlButton(viewName: "", id: "btnSubirFoto2", label: "Subir Foto de Portada", buttonType: "danger")
                </form>

                <form id="frmImagenes">
                    @Html.CtrlInput(id: "txtlogo", type: "text", label: "", columnDataName: "Logo")
                    @Html.CtrlInput(id: "txtIdRest", type: "text", label: "", columnDataName: "IdRestaurante")
                    @Html.CtrlInput(id: "txtperfil", type: "text", label: "", columnDataName: "Perfil")
                </form>

                @Html.CtrlButton(viewName: "vComercio", id: "btnRegistrar", label: "Registrar Imágenes", onClickFunction: "RegistrarImagenes", buttonType: "success")

            </div>
            <h2 id="textDecoForm">
                ¡Incremente el
                <br>público de
                <br>su negocio!
            </h2>
        </div>

    </div>

    <!---------------------------------------------------------------------------------------------------------------------->

    <footer id="footer">
        <img id="logoFooter" src="https://res.cloudinary.com/veromorera/image/upload/v1573498967/masterFood/logo.png">
        <img id="logoLemon" src="https://res.cloudinary.com/veromorera/image/upload/v1574303663/masterFood/logoPSW2-01.jpg">

        <p>
            MasterFood 2019 - Todos los derechos reservados.<br />
            Creado por <a id="footerLanding" href="/Home/lemonCode"> LemonCode</a>
        </p>
    </footer>


    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!-- Scripts cloudinary -->

    <script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js' type='text/javascript'></script>
    <script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    <script src="~/Scripts/Views/vImagen.js"></script>

</body>
</html>
