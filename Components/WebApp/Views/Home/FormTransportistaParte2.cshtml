@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <title>Form Transportista</title>
    <meta charset="utf-8">

    <!--CSS-->
    <link rel="stylesheet" href="~/Content/css/reset.css"> <!--reset style-->
    <link rel="stylesheet" href="~/Content/css/commons.css">
    <link rel="stylesheet" href="~/Content/css/formTransportistaParte2.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Roboto Condensed' rel='stylesheet'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>

<body>
    <div class="mainImage1">
        <a href="/Home/Index"><img id="logo" src="https://res.cloudinary.com/veromorera/image/upload/v1573498967/masterFood/logo.png"></a>


        <div class="formContainer">
            <div class="form">
                <h2 id="encabezadoForm">Registrarse como Transportista</h2>
                <h4>Paso 2</h4>


                <form id="frmDocumento" class="frm">

                    <!--registrar documento-->
                    <!--Hidden-->@Html.CtrlInput(id: "txtIdUsuario", type: "text", label: "", columnDataName: "IdUsuario")
                    @Html.CtrlInput(id: "txtEco", type: "text", label: "Vehículo Ecológico", columnDataName: "VehiculoEcologico")
                    @Html.CtrlInput(id: "txtTipoVehiculo", type: "text", label: "Tipo de Vehículo", columnDataName: "TipoVehiculo")
                    <!--Hidden-->@Html.CtrlInput(id: "txtLicenciaConducir", type: "text", label: "LicenciaConducir", columnDataName: "LicenciaConducir")
                    <!--Hidden-->@Html.CtrlInput(id: "txtMinisterio", type: "text", label: "", columnDataName: "PermisoMinSalud")


                    <a id="doc_preview" href=""></a>
                    @Html.CtrlButton(viewName: "", id: "btnSubirDoc", label: "Subir Documento", buttonType: "danger")
                </form>


                @Html.CtrlButton(viewName: "vTransportistas", id: "btnRegDocs", label: "Registrar", onClickFunction: "RegistrarDocumentos", buttonType: "success")

            </div>
            <h2 id="textDecoForm">
                ¡Aumente
                <br>sus ingresos!

            </h2>
        </div>

    </div>

    <!---------------------------------------------------------------------------------------------------------------------->

    <footer id="footer">
        <img id="logoFooter" src="https://res.cloudinary.com/veromorera/image/upload/v1573498967/masterFood/logo.png">
        <img id="logoLemon" src="https://res.cloudinary.com/veromorera/image/upload/v1574303663/masterFood/logoPSW2-01.jpg">

        <p>
            MasterFood 2019 - Todos los derechos reservados.<br />
            Creado por <a id="footerLanding" href="/Home/lemonCode"> LemonCode</a>
        </p>
    </footer>


    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!-- Scripts cloudinary -->

    <script src='https://cdn.jsdelivr.net/jquery.cloudinary/1.0.18/jquery.cloudinary.js' type='text/javascript'></script>
    <script src="https://widget.cloudinary.com/global/all.js" type="text/javascript"></script>
    <script src="~/Scripts/Views/vImagen.js"></script>


</body>
</html>
