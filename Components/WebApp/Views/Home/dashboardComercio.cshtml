@using WebApp.Helpers;
<script src="~/Scripts/Views/vDashboardComercio.js"></script>
<script src="~/Scripts/Views/vHeader.js"></script>
<script src="~/Scripts/Views/vOrdenCompra.js"></script>
<script src="~/Scripts/Views/vTransaccion.js"></script>
<script src="~/Scripts/Views/logout.js"></script>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html>
<head>
    <title>Dashboard Comercio</title>
    <meta charset="utf-8">

    <!--CSS-->
    <link rel="stylesheet" href="~/Content/css/reset.css"> <!--reset style-->
    <link rel="stylesheet" href="~/Content/css/commons.css">
    <link rel="stylesheet" href="~/Content/css/dashboardComercio.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">


    <link href='http://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

</head>
<body>
    <div class="mainImage1">
        <a href="/Home/Index"><img id="logo" src="https://res.cloudinary.com/veromorera/image/upload/v1573498967/masterFood/logo.png"></a>
        <a id="datosUsuario"></a>

        <header id="header">

            <ul id="menuDefault"></ul>
            <ul id="menuComercio"></ul>
            <ul id="menuTransportista"></ul>
            <ul id="menuAdmin"></ul>
            <ul id="menuCliente"></ul>
            <!--menu cliente-->
            <ul>
                <li>
                    @Html.CtrlButton(viewName: "vHeader", id: "btnDashboardComercio", label: "Mi Perfil", onClickFunction: "DashboardComercio", buttonType: "success")
                </li>
                <li>
                    @Html.CtrlButton(viewName: "vDashboardComercio", id: "btnRestaurante", label: "Mi Restaurante", onClickFunction: "miRestaurante", buttonType: "success")
                </li>
                <li>
                    <button id="BtnPagos" type="button" class="btn btn-danger" data-toggle="modal" data-target="#pagoDesgloce">Mis Pagos</button>
                </li>
                <li>
                    <button id="logout" class="btn btn-success"><i class="fa fa-sign-out fa-lg"></i></button>
                </li>
            </ul>
        </header>

    </div>

    <!---------------------------------------------------------------------------------------------------------------------->
    <section class="botInstructions">

        <img class="imgBotInstructions" src="https://res.cloudinary.com/veromorera/image/upload/v1573498969/masterFood/Web_1920_1.png">

        <p id="botTextInstructions">
            ¿Cómo gestionar una orden?<br />
            <br>1- Presione el botón que corresponde al estado en el que se encuentra la orden.
            <br>2- Puede ver el estado de todos los pedidos haciendo click en las flechas laterales.
            <br>3- Al finalizar, la orden se archivará en su historial de ventas.
        </p>

    </section>

    <!---------------------------------------------------------------------------------------------------------------------->

    <section class="options">

        <h1 id="Instruciones">Estado del pedido de:</h1>

        <button id="paso1" class="btn btn-default bouton-image">Aceptar el pedido</button>

        <button id="paso2" class="btn btn-default bouton-image">Preparar la orden</button>

        <button id="paso3" class="btn btn-default bouton-image">Entregar el pedido al transportista</button>

    </section>

    <!---------------------------------------------------------------------------------------------------------------------->
    <section class="tablaContainer">
        <h1>Historial de Ventas</h1>
        <br />


        @Html.CtrlTable(viewName: "vOrdenCompra", id: "tbOrdenCompra", title: "Ventas Realizadas", columnsTitle: "Nombre del Cliente,Pago Total,Estado de la Orden",
                ColumnsDataName: "NombreCliente,Total,EstadoOrden", onSelectFunction: "BindFields", colorHeader: "red")

    </section>
    <!---------------------------------------------------------------------------------------------------------------------->

    <section class="adverticingContainer">
        <img src="	https://res.cloudinary.com/veromorera/image/upload/v1573498965/masterFood/dashboardComercio.jpg">

        <h2 id="textDecoForm">
            ¡Las promociones en
            <br>sus servicios
            <br>incrementan la
            <br>popularidad y ventas
            <br>de su negocio!
        </h2>
    </section>

    <!---------------------------------------------------------------------------------------------------------------------->

    <section class="BalanceGraph">
        <h1>Balance de Ganancias</h1>
    </section>

    <!---------------------------------------------------------------------------------------------------------------------->

    <footer id="footer">
        <img id="logoFooter" src="https://res.cloudinary.com/veromorera/image/upload/v1573498967/masterFood/logo.png">
        <img id="logoLemon" src="https://res.cloudinary.com/veromorera/image/upload/v1574303663/masterFood/logoPSW2-01.jpg">

        <p>
            MasterFood 2019 - Todos los derechos reservados.<br />
            Creado por <a id="footerLanding" href="/Home/lemonCode"> LemonCode</a>
        </p>
    </footer>


    <!---------------------------------------------------------------------------------------------------------------------->
    <!-- The Modal Pagos a Paypal-->
    <div class="modal fade" id="pagoDesgloce">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content" id="ModalContent">

                <!-- Modal Header -->
                <div class="modal-header Inicolor" id="HeaderModal">
                    <img id="logoModal2" src="https://res.cloudinary.com/veromorera/image/upload/v1573498967/masterFood/logo.png">
                    <br>

                    <h4 class="modal-title2">Desgloce de Ganancias</h4>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <div id="tablaContainer2">
                        @Html.CtrlTable(viewName: "vTransaccion", id: "tbTransaccion", title: "Desgloce de Ganancias",
                            columnsTitle: "Crédito,Detalle,Fecha",
                            ColumnsDataName: "Credito,Detalle,Fecha",
                            onSelectFunction: "BindFields", colorHeader: "red")
                    </div>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer text-center">
                    @Html.CtrlButton(viewName: "vTransaccion", id: "btnPagoPaypal", label: "Enviar dinero a PayPal", onClickFunction: "PagoPaypal", buttonType: "success")

                </div>
            </div>
        </div>
    </div>

    @* PRIVACIDAD DEL LOGIN *@
    <script src="~/Scripts/Views/secureLogin.js"></script>

    @*<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

</body>
</html>
