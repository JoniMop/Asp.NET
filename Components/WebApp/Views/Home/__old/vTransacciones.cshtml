@using WebApp.Helpers;
<script src="~/Scripts/Views/vTransacciones.js"></script>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.CtrlTable(viewName: "vTransacciones", id: "tblTransacciones", title: "Lista Transacciones",
    columnsTitle: "IdUsuario,Debito,Credito,Detalle,Fecha",
    ColumnsDataName: "IdUsuario,Debito,Credito,Detalle,Fecha", 
    onSelectFunction: "BindFields", colorHeader:"red")


<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8">Editar Usuario</div>
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "vTransacciones", id: "btnCreate", label: "Save", onClickFunction: "Create", buttonType:"success")
                @Html.CtrlButton(viewName: "vTransacciones", id: "btnUpdate", label: "Save changes", onClickFunction: "Update", buttonType: "info")
                @Html.CtrlButton(viewName: "vTransacciones", id: "btnDelete", label: "Delete", onClickFunction: "Delete",buttonType: "danger")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="bs-component">
                    <form id="frmEdition">
                        @Html.CtrlInput(id: "txtIdUsuario", type: "text", label: "IdUsuario", columnDataName: "IdUsuario")
                        @Html.CtrlInput(id: "txtDebito", type: "text", label: "Debito", columnDataName: "Debito")
                        @Html.CtrlInput(id: "txtCredito", type: "text", label: "Credito", columnDataName: "Credito")
                        @Html.CtrlInput(id: "txtDetalle", type: "text", label: "Detalle", columnDataName: "Detalle")
                        @Html.CtrlInput(id: "txtFecha", type: "text", label: "Fecha", columnDataName: "Fecha")

                    </form>
                </div>
            </div>
        </div>
     </div>
</div>