@using WebApp.Helpers;
<script src="~/Scripts/Views/vDocumentos.js"></script>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Html.CtrlTable(viewName: "vDocumentos", id: "tblDocumentos", title: "Lista Documentos",
    columnsTitle: "IdUsuario,VehiculoEcologico,TipoVehiculo,LicenciaConducir,PermisoMinSalud",
    ColumnsDataName: "IdUsuario,VehiculoEcologico,TipoVehiculo,LicenciaConducir,PermisoMinSalud", 
    onSelectFunction: "BindFields", colorHeader:"red")


<div class="card border-secondary" style="margin-top: 50px;">
    <div class="card-header">
        <div class="row pull-right">
            <div class="col-md-8">Editar Usuario</div>
            <div class="col-md-4">
                @Html.CtrlButton(viewName: "vDocumentos", id: "btnCreate", label: "Save", onClickFunction: "Create", buttonType:"success")
                @Html.CtrlButton(viewName: "vDocumentos", id: "btnUpdate", label: "Save changes", onClickFunction: "Update", buttonType: "info")
                @Html.CtrlButton(viewName: "vDocumentos", id: "btnDelete", label: "Delete", onClickFunction: "Delete",buttonType: "danger")
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                <div class="bs-component">
                    <form id="frmEdition">
                        @Html.CtrlInput(id: "txtIdUsuario", type: "text", label: "IdUsuario", columnDataName: "IdUsuario")
                        @Html.CtrlInput(id: "txtVehiculoEcologico", type: "text", label: "VehiculoEcologico", columnDataName: "VehiculoEcologico")
                        @Html.CtrlInput(id: "txtTipoVehiculo", type: "text", label: "TipoVehiculo", columnDataName: "TipoVehiculo")
                        @Html.CtrlInput(id: "txtLicenciaConducir", type: "text", label: "LicenciaConducir", columnDataName: "LicenciaConducir")
                        @Html.CtrlInput(id: "txtPermisoMinSalud", type: "text", label: "PermisoMinSalud", columnDataName: "PermisoMinSalud")                     
                    </form>
                </div>
            </div>
        </div>
     </div>
</div>